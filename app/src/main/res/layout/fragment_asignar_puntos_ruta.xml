<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".AsignarPuntosRuta">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Indicador de Progreso -->
        <LinearLayout
            android:id="@+id/layoutProgreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <!-- Paso 1: Completado -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_completed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos Ruta"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Línea conectora -->
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@android:color/black"
                android:layout_marginTop="0dp" />

            <!-- Paso 2: Activo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_active" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asignar Puntos"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Asignar Puntos de Recolección"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/layoutProgreso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" />

        <!-- Nombre de la ruta con Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRutaInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    android:tint="@android:color/black" />

                <TextView
                    android:id="@+id/txtNombreRuta"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Ruta: Cargando..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección de Búsqueda y Filtros -->
        <TextView
            android:id="@+id/lblBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar Puntos"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/cardRutaInfo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />

        <!-- Búsqueda de puntos -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBuscarPunto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Buscar por nombre o dirección..."
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:layout_constraintTop_toBottomOf="@id/lblBuscar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBuscarPunto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Filtro por zona -->
        <Spinner
            android:id="@+id/spFiltroZona"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            app:layout_constraintTop_toBottomOf="@id/tilBuscarPunto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Sección: Puntos disponibles -->
        <LinearLayout
            android:id="@+id/headerDisponibles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/spFiltroZona"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/lblPuntosDisponibles"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Puntos Disponibles"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtContadorDisponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 puntos"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Lista de puntos disponibles con Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPuntosDisponibles"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/headerDisponibles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPuntosDisponibles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:clipToPadding="false" />

                <!-- Mensaje cuando no hay puntos -->
                <LinearLayout
                    android:id="@+id/layoutSinPuntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:alpha="0.3" />

                    <TextView
                        android:id="@+id/txtSinPuntos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay puntos disponibles"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección: Puntos asignados -->
        <LinearLayout
            android:id="@+id/headerAsignados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F5F5F5"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardPuntosDisponibles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/lblPuntosAsignados"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Puntos Asignados (0)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrastra para ordenar"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="italic" />
        </LinearLayout>

        <!-- Lista de puntos asignados -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPuntosAsignados"
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FAFAFA"
            app:layout_constraintTop_toBottomOf="@id/headerAsignados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPuntosAsignados"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:clipToPadding="false" />

                <!-- Mensaje cuando no hay puntos asignados -->
                <LinearLayout
                    android:id="@+id/layoutSinAsignados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_input_add"
                        android:alpha="0.3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seleccione puntos arriba"
                        android:textSize="13sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botón guardar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarAsignacion"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Finalizar"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/black"
            app:cornerRadius="12dp"
            app:rippleColor="#66BB6A"
            app:layout_constraintTop_toBottomOf="@id/cardPuntosAsignados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>