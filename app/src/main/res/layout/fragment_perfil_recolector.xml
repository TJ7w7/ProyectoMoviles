<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Recolector.PerfilRecolector">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mi Perfil"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Datos Personales -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDatos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/lblDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Datos Personales"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtNombreCompleto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Carlos HernÃ¡ndez"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/lblDatos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/lblEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ Correo"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/txtNombreCompleto"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="carlos@gmail.com"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/lblEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/lblTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“± TelÃ©fono"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/txtEmail"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/txtTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/lblTelefono"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtFechaRegistro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Miembro desde 22/10/2024"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/txtTelefono"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarPerfil"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Editar Perfil"
                android:textSize="12sp"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtFechaRegistro"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Card Estado Actual -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEstado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@id/cardDatos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <TextView
        android:id="@+id/lblEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado Actual"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtEstadoActual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Activo"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/lblEstado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/txtRolRecolector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rol: Conductor"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txtEstadoActual"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/txtDescripcionEstado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Disponible para asignaciones"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/txtRolRecolector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCambiarEstado"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Cambiar Estado"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtDescripcionEstado"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

        <!-- Card Ruta Actual -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRutaActual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cardEstado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lblRutaActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš› Ruta Actual"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txtRutaActual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ruta Centro - MaÃ±ana"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    app:layout_constraintTop_toBottomOf="@id/lblRutaActual"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtDetalleRuta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="RUTA001\n24/10/2025\nConductor: Carlos\nEquipo: 3 personas"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/txtRutaActual"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerRuta"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Ver Detalle"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:layout_constraintTop_toBottomOf="@id/txtDetalleRuta"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card VehÃ­culo Asignado -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardVehiculo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardRutaActual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lblVehiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš— VehÃ­culo Asignado"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txtVehiculoAsignado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="QEE-123"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    app:layout_constraintTop_toBottomOf="@id/lblVehiculo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtDetalleVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tipo: Motocicleta\nCapacidad: 50 Kg"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/txtVehiculoAsignado"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

                <!-- Mensaje sin vehÃ­culo -->
                <LinearLayout
                    android:id="@+id/layoutSinVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/lblVehiculo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:alpha="0.3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sin vehÃ­culo asignado"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="8dp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>