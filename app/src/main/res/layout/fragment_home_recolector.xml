<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".Recolector.HomeRecolector">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título y Bienvenida -->
        <TextView
            android:id="@+id/txtBienvenida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="¡Hola!"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtSubtitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bienvenido a tu jornada de recolección"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/txtBienvenida"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Card Estado Actual -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@android:color/holo_green_dark"
            app:layout_constraintTop_toBottomOf="@id/txtSubtitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lblEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado Actual"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txtEstadoActual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/lblEstado"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/txtRolRecolector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rol: Conductor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/txtEstadoActual"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/txtDescripcionEstado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Disponible para asignaciones"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/txtRolRecolector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCambiarEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambiar Estado"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@android:color/black"
                    app:cornerRadius="8dp"
                    app:layout_constraintTop_toBottomOf="@id/txtDescripcionEstado"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card Ruta Actual -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRutaActual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cardEstado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lblRutaActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruta Actual"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txtRutaActual"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ruta Centro - Mañana"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    app:layout_constraintTop_toBottomOf="@id/lblRutaActual"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtDetalleRuta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="RUTA001\n24/10/2025\nConductor: Carlos\nEquipo: 3 personas"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/txtRutaActual"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerRuta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ver Detalle de Ruta"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_view"
                    app:layout_constraintTop_toBottomOf="@id/txtDetalleRuta"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card Vehículo Asignado -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardVehiculo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardRutaActual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lblVehiculo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehículo Asignado"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/txtVehiculoAsignado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="QEE-123"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    app:layout_constraintTop_toBottomOf="@id/lblVehiculo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtDetalleVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tipo: Motocicleta\nCapacidad: 50 Kg"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/txtVehiculoAsignado"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" />

                <!-- Mensaje sin vehículo -->
                <LinearLayout
                    android:id="@+id/layoutSinVehiculo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/lblVehiculo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:alpha="0.3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sin vehículo asignado"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="8dp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>