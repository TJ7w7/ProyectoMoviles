<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeDashboard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Panel de Control"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lunes, 01 de enero 2025"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Sección: Material Recolectado -->
        <TextView
            android:id="@+id/lblMateriales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="♻️ Material Recolectado"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/txtFecha"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Card: Material Hoy -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTotalMaterialHoy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#4CAF50"
            app:layout_constraintTop_toBottomOf="@id/lblMateriales"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardTotalMaterialGeneral"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoy"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txtPesoHoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 kg"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtMaterialesHoy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin recolecciones"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card: Material Total -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTotalMaterialGeneral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#2196F3"
            app:layout_constraintTop_toBottomOf="@id/lblMateriales"
            app:layout_constraintStart_toEndOf="@id/cardTotalMaterialHoy"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Acumulado"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/txtPesoTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 kg"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/txtCantidadRegistros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 registros"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>