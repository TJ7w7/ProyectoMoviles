<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarUsuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:paddingTop="32dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Título -->
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Usuario"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Tipo de Usuario (solo lectura) -->
            <TextView
                android:id="@+id/lblTipoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Usuario"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/txtTitulo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/txtTipoUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Recolector"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_green_dark"
                android:padding="12dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/lblTipoUsuario"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Sección: Datos Personales -->
            <TextView
                android:id="@+id/lblSeccionPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos Personales"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/txtTipoUsuario"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" />

            <!-- Nombres -->
            <TextView
                android:id="@+id/lblNombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombres *"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/lblSeccionPersonal"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etNombres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Ingrese nombres"
                android:inputType="textCapWords"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                app:layout_constraintTop_toBottomOf="@id/lblNombres"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Apellidos -->
            <TextView
                android:id="@+id/lblApellidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellidos *"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/etNombres"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etApellidos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Ingrese apellidos"
                android:inputType="textCapWords"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                app:layout_constraintTop_toBottomOf="@id/lblApellidos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Teléfono -->
            <TextView
                android:id="@+id/lblTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono *"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/etApellidos"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etTelefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Ingrese teléfono"
                android:inputType="phone"
                android:maxLength="9"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                app:layout_constraintTop_toBottomOf="@id/lblTelefono"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Correo (solo lectura) -->
            <TextView
                android:id="@+id/lblCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo (no editable)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/etTelefono"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/txtCorreo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="correo@ejemplo.com"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:padding="12dp"
                android:background="#F5F5F5"
                app:layout_constraintTop_toBottomOf="@id/lblCorreo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Estado -->
            <TextView
                android:id="@+id/lblEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/txtCorreo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario Activo"
                android:textSize="16sp"
                android:checked="true"
                app:layout_constraintTop_toBottomOf="@id/lblEstado"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Información de registro -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:alpha="0.3"
                app:layout_constraintTop_toBottomOf="@id/switchEstado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/txtInfoRegistro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Registrado el: 01/10/2025"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Botones -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarCambios"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Guardar Cambios"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/black"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                app:rippleColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/txtInfoRegistro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/white"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                app:rippleColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/btnGuardarCambios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>