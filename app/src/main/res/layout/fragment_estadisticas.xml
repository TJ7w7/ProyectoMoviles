<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Estadisticas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EstadÃ­sticas"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Filtro de perÃ­odo -->
            <Spinner
                android:id="@+id/spPeriodo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                app:layout_constraintTop_toBottomOf="@id/txtTitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Tarjetas de resumen -->
            <LinearLayout
                android:id="@+id/llTarjetas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/spPeriodo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <!-- Fila 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Total Recolectado -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#E8F5E9">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â™»ï¸"
                                android:textSize="32sp" />

                            <TextView
                                android:id="@+id/txtTotalRecolectado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2,450 Kg"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Recolectado"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Rutas Completadas -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#E3F2FD">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âœ…"
                                android:textSize="32sp" />

                            <TextView
                                android:id="@+id/txtRutasCompletadas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rutas Completadas"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Fila 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Puntos Atendidos -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#FFF3E0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“"
                                android:textSize="32sp" />

                            <TextView
                                android:id="@+id/txtPuntosAtendidos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="186"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Puntos Atendidos"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Trabajadores Activos -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="#F3E5F5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ‘·"
                                android:textSize="32sp" />

                            <TextView
                                android:id="@+id/txtTrabajadoresActivos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trabajadores Activos"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- GrÃ¡fico placeholder -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGrafico"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_margin="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/llTarjetas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GrÃ¡fico de RecolecciÃ³n por DÃ­a"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Implementar con librerÃ­a de grÃ¡ficos)"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de top recolectores -->
            <TextView
                android:id="@+id/lblTopRecolectores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Recolectores"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/cardGrafico"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTopRecolectores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:background="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/lblTopRecolectores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>