<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarVehiculo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:paddingTop="32dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Título -->
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Vehículo"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Sección: Información del Vehículo -->
            <TextView
                android:id="@+id/lblSeccionVehiculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del Vehículo"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/txtTitulo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" />

            <!-- Placa (solo lectura) -->
            <TextView
                android:id="@+id/lblPlaca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/lblSeccionVehiculo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/txtPlaca"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ABC-123"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="12dp"
                android:background="#F5F5F5"
                app:layout_constraintTop_toBottomOf="@id/lblPlaca"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Tipo de Vehículo -->
            <TextView
                android:id="@+id/lblTipoVehiculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Vehículo *"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/txtPlaca"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spTipoVehiculo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                app:layout_constraintTop_toBottomOf="@id/lblTipoVehiculo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Capacidad -->
            <TextView
                android:id="@+id/lblCapacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacidad (Kg) *"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/spTipoVehiculo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etCapacidad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="500"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                app:layout_constraintTop_toBottomOf="@id/lblCapacidad"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Estado del Vehículo -->
            <TextView
                android:id="@+id/lblEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado *"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/etCapacidad"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spEstado"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                app:layout_constraintTop_toBottomOf="@id/lblEstado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Observaciones -->
            <TextView
                android:id="@+id/lblObservaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observaciones"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/spEstado"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etObservaciones"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:hint="Detalles adicionales sobre el vehículo..."
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                app:layout_constraintTop_toBottomOf="@id/lblObservaciones"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <!-- Información de registro -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:alpha="0.3"
                app:layout_constraintTop_toBottomOf="@id/etObservaciones"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/txtInfoRegistro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Registrado el: 01/10/2025"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

            <!-- Botones -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarCambios"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Guardar Cambios"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/black"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                app:rippleColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/txtInfoRegistro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:backgroundTint="@android:color/white"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp"
                app:rippleColor="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@id/btnGuardarCambios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>