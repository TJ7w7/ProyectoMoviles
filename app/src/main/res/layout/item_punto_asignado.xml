<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#E8F5E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtOrden"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtNombrePunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mercado Central"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtDireccionPunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Av. Principal 123"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnSubir"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/arrow_up_float"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Subir"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btnBajar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/arrow_down_float"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Bajar"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btnQuitar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Quitar"
            android:tint="@android:color/holo_red_dark"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>