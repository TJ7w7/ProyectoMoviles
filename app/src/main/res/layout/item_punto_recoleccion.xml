            app:layout_constraintEnd_toStartOf="@id/txtEstado"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp" />

        <!-- Estado -->
        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
