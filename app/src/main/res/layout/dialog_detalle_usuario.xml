<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/txtDetalleNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Juan Pérez García"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtDetalleTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo: Recolector"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txtDetalleTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teléfono: 987654321"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txtDetalleCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo: juan@example.com"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txtDetalleEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado: Activo"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/txtDetalleFechaRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrado: 01/10/2025 14:30"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>