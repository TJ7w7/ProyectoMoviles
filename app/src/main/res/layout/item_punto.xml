<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono -->
        <ImageView
            android:id="@+id/imgIcono"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_dialog_map"
            android:background="@android:color/holo_green_light"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mercado Central"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@id/imgIcono"
            app:layout_constraintStart_toEndOf="@id/imgIcono"
            app:layout_constraintEnd_toStartOf="@id/switchEstado"
            android:layout_marginStart="12dp" />

        <!-- Tipo -->
        <TextView
            android:id="@+id/txtTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comercio"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtNombre"
            app:layout_constraintStart_toEndOf="@id/imgIcono"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" />

        <!-- Switch Estado -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- DirecciÃ³n -->
        <TextView
            android:id="@+id/txtDireccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Av. Principal 123, Centro"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/imgIcono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Zona y Frecuencia -->
        <TextView
            android:id="@+id/txtZonaFrecuencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ—ºï¸ Zona Centro â€¢ ðŸ”„ Diaria"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/txtDireccion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Materiales -->
        <TextView
            android:id="@+id/txtMateriales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â™»ï¸ PlÃ¡stico, CartÃ³n, Vidrio"
            android:textSize="12sp"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintTop_toBottomOf="@id/txtZonaFrecuencia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Contenedor QR (expandible) -->
        <LinearLayout
            android:id="@+id/llQRContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtMateriales"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÃ³digo QR"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/imgQR"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:background="@android:color/white"
                android:padding="8dp"
                android:contentDescription="CÃ³digo QR" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDescargarQR"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Descargar QR"
                android:textSize="12sp"
                android:textAllCaps="false"
                app:icon="@android:drawable/stat_sys_download"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                android:layout_marginTop="8dp"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

        <!-- Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/llQRContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerQR"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Ver QR"
                android:textSize="12sp"
                android:textAllCaps="false"
                app:icon="@android:drawable/ic_menu_view"
                app:iconSize="16dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerMapa"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Mapa"
                android:textSize="12sp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Editar"
                android:textSize="12sp"
                android:textAllCaps="false"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

