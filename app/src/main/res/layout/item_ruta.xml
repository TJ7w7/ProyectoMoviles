<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono -->
        <ImageView
            android:id="@+id/imgIcono"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_directions"
            android:background="@android:color/holo_purple"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nombre y CÃ³digo -->
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ruta Centro - MaÃ±ana"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@id/imgIcono"
            app:layout_constraintStart_toEndOf="@id/imgIcono"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R-001"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtNombre"
            app:layout_constraintStart_toEndOf="@id/imgIcono"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" />

        <!-- Estado -->
        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activa"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_green_dark"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Zona -->
        <TextView
            android:id="@+id/txtZona"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ—ºï¸ Zona: Centro"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/imgIcono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Horario -->
        <TextView
            android:id="@+id/txtHorario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ• Horario: 07:00 - 10:00"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/txtZona"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- DÃ­as -->
        <TextView
            android:id="@+id/txtDias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Lunes, MiÃ©rcoles, Viernes"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/txtHorario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Puntos asignados -->
        <TextView
            android:id="@+id/txtPuntos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“ 8 puntos asignados"
            android:textSize="12sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txtDias"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/txtPuntos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerPuntos"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Ver Puntos"
                android:textSize="12sp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Editar"
                android:textSize="12sp"
                android:textAllCaps="false"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>